<!-- app/templates/libraries/new.hbs -->
<h2>New book</h2>

<form>
  <div class="form-horizontal">
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.title class="form-control" placeholder="The name of the Library"}}
      </div>
    </div>
    
    <div class="form-group"> 
      <label class="col-sm-2 control-label">Select library</label> 
      <div class="col-sm-10">
        {{select-input collection=libraries class-name='form-control' action='selectLibrary'}}
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveBook' model }}>Save</button>
      </div>
    </div>
    
  </div>
</form>
