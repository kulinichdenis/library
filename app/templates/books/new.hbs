<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control" value=model.title  placeholder="Title"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      {{!-- <select {{action 'selectLibrary' on='change'}}> --}}
       {{select-input libraries=libraries action='selectLibrary'}}
      {{!-- </select> --}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveBook' model }}>Save</button>
    </div>
  </div>
</form>