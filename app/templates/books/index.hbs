<div class="row">
	<div class="col-lg-6">
		{{#link-to 'books.new' class="btn btn-info"}}Create new book{{/link-to}}
		<button class="btn btn-info" {{ action 'showModal' }}>Modal</button>
	</div>
	<div class="col-lg-6">
		<div class="input-group">
		  <span class="input-group-addon">Filter</span>
			{{input type="text" value=filtering class="form-control" placeholder="Filter by book name"}}
		</div>
	</div>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Book</th>
			<th>Library</th>
		</tr>
	</thead>
	<tbody>
		{{#each books as |book|}}
			<tr>
				<td>{{ book.title }}</td>
				<td>{{ book.library.name }}</td>
				<td class="text-right"><button class="btn btn-danger" {{ action 'deleteBook' book}}>Delete</button></td>
			</tr>
		{{/each}}
	</tbody>
</table>
<nav>
  <ul class="pager">
		{{#link-to (query-params  page=prevPage) tagName='li' disabled=prevButton	}}<a href="">Previous</a>{{/link-to}}
		{{#link-to (query-params page=nextPage) tagName='li'  disabled=nextButton }}<a href="">Next</a>{{/link-to}}
  </ul>
</nav>
{{#if isModal}}
	{{#modal-dialog close="toggleModal" translucentOverlay=true}}
		{{input type="text" value=bookName}}
		{{select-input libraries=libraries action='selectLibrary'}}
		<div class="btn btn-info" {{action 'buttonSubmit'}}>Submit</div>
	{{/modal-dialog}}
{{/if}}
