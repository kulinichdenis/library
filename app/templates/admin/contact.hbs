<h1>Contacts</h1>

<table class="table table-bordered table-hover">
    <thead>
      <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Contact</th>
          <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |contact|}}
        <tr>
            <th>{{contact.id}}</th>
            <td>{{contact.email}}</td>
            <td>{{contact.message}}</td>
            <td><button class="btn btn-danger" {{action 'deleteContact' contact}}>Delete</button></td>
        </tr>
    {{/each}}
    </tbody>
</table>  
